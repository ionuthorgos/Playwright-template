{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/user.schema.json",
    "title": "User",
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        }
      },
      "required": ["id", "name", "email"]
  }